<div class="row">
    <div class="col s12 m8">
        <h3>{{publication.title}}
            <small>{{{editIcon publication.user user publication._id false}}}</small>
        </h3>
        <div class="card publication">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{publication.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{publication.user.displayName}}</span>
                <img src="{{publication.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/publications/user/{{publication.user._id}}">More From {{publication.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>